{
  "name": "gamerz",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/src/server.js",
    "copy-assets": "ts-node ./src/tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "migrate": "sequelize db:migrate",
    "migrate:all": "sequelize db:migrate:all",
    "migrate:undo": "sequelize db:migrate:undo",
    "migrate:undo:all": "sequelize db:migrate:undo:all",
    "dev:start": "npm-run-all build start",
    "clean": "rimraf dist/*",
    "format": "prettier-standard '**/*.ts'",
    "watch-node": "DEBUG=gamerz:* nodemon ./dist/src/server.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.19",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.125",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.3",
    "@types/sequelize": "^4.28.6",
    "@types/validate.js": "^0.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "ejs": "~2.6.1",
    "express": "~4.18.2",
    "http-errors": "~1.6.3",
    "husky": "^3.0.9",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.4.2",
    "morgan": "~1.9.1",
    "mysql2": "^1.7.0",
    "nexmo": "^2.5.1",
    "prettier-standard": "^15.0.1",
    "sequelize": "^5.19.6",
    "validate.js": "^0.13.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^8.0.0",
    "@types/shelljs": "^0.8.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-register": "^6.26.0",
    "fs-extra": "^8.1.0",
    "http-proxy-middleware": "^0.20.0",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier-standard",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
